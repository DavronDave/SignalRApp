@{
    ViewData["Title"] = "Home Page";
}

<div class="container list-group-item-success p-3">
    <div class="row">
        <div class="col-2">Connection Id</div>
        <div class="col-4"><span id="connectionId" /></div>
    </div>

    <hr />
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row mt-1 mb-1">
        <div class="col-2">Message</div>
        <div class="col-6 "><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Receiver Id</div>
        <div class="col-4"><input type="text" id="receiverId" /></div>
    </div>

    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input class="btn btn-primary" type="button" id="sendToUser" value="Send Message" />&nbsp;&nbsp;
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>